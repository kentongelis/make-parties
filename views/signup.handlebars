<div class="row mt-4">
    <div class="col-lg-6 offset-lg-3">
        <div class="card">
            <div class="card-body">
                <div class="card-title">
                    <h3>Sign Up</h3>
                </div>
                <div class="card-text">
                    <form action="/signup" method="post">
                    <div class="form-group">
                        <label for="first">First Name</label>
                        <input name="first" placeholder="Your First Name" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label for="last">Last Name</label>
                        <input name="last" placeholder="Your Last Name" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label for="username">Username</label>
                        <input name="username" placeholder="Create a username" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input name="password" placeholder="Create a password" class="form-control"/>
                    </div>
                    <div class="text-right">
                        <button type="submit" class="btn btn-primary" name="button">Sign Up</button>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>